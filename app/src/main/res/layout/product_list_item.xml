<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="90dp"
    android:layout_height="135dp"
    android:clickable="true"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_title_list" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/product_list_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded_shape"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/product_title_list"
        app:layout_constraintEnd_toEndOf="@+id/product_title_list"
        app:layout_constraintStart_toStartOf="@+id/product_title_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_title_list"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:autoText="false"
        android:gravity="clip_horizontal"
        android:text="عنوان"
        android:textColor="@android:color/black"
        android:textSize="8sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/product_list_imageview" />

    <TextView
        android:id="@+id/product_price_list"
        android:layout_width="wrap_content"
        android:layout_height="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#2A9610"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.066"
        tools:text="۱۳۱۳۱۳۱۳" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="1.5dp"
        android:text="ریال"
        android:textColor="#2A9610"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_price_list"
        app:layout_constraintEnd_toStartOf="@+id/product_price_list"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_price_list" />


</androidx.constraintlayout.widget.ConstraintLayout>